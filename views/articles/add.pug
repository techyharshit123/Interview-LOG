extends ../layouts/main
        
block Content
    .container.formgroup
        .row
            form.col.s12(action='/articles' method='POST')
                .row
                    .input-field.col.s12
                        input#title(type='text' name='title')
                        label(for='title') Title
                .row
                    .input-field.col.s12
                        input#author(type='text' name='author' value=`${user.displayName}`)
                        label(for='author') Author
                .row
                    .input-field.col.s12
                        textarea#textarea1.materialize-textarea(name='body')
                        label(for='textarea1') Body
                
                button.btn.waves-effect.waves-light(type='submit' name='action')
                    | Save
                    i.fas.fa-paper-plane.right
                | 
                a.btn.orange(href="/dashboard")
                    | Cancel
                    i.fas.fa-times.right
